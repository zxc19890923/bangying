/* pages/lender/investTab/investTab.wxss */
.mediatorCenter {
  display: flex;
  align-items: center;
  width: 100%;
  height: 100%;
  flex-direction: column;

}
.mediatorList {
  flex: 1;
  width: 100%;
}
.mediatorBottom {
  flex-shrink: 0;
  width: 100%;
  height: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  box-shadow: 0px 1px 0px 0px #e5e5e4 inset;
  color: #ccc;
  font-size: 30rpx;
}
.mediatorBottomLeft {
  flex: 1;
  text-align: center;
}
.mediatorBottomRight {
  flex: 1;
  align-items: center;
  text-align: center;
  justify-content: center;
}
.active {
  color: #1AAD19;
  font-weight: 600;
}
.mediatorHeader {
  color: #999;
  font-size: 26rpx;
}
.numberStyle {
  font-size: 24rpx;
  color: #666666;
  font-weight: 400;
}