/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.myForm {
  width: 100%;
}

.tabar {
  width: 100%;
  box-sizing: border-box;
  position: fixed;
  text-align: center;
  font-size: 22rpx;
  background-color: #fff;
}

.tabar view {
  padding: 25rpx 0rpx;
  color: #000;
  font-size: 22rpx;
}

.tabar .active {
  color: #fff;
}